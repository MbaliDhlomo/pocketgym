@model pocketgym.Models.User

@{
    ViewBag.Title = "Login";

}
<body>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="login-clean" style="color: rgb(0,0,0);background-color: rgb(0,0,0);">

            <form method="post">
                <h1 style="font-family: Audiowide, cursive;color: #000000;">Pocket Gym&nbsp;<img src="assets/img/69840.png" style="width: 100px;"></h1>
                <div class="form-group">
                    <input class="form-control" type="email" name="Email" placeholder="Email" style="font-family: Audiowide, cursive;color: #000000;">
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" name="Password" placeholder="Password" style="font-family: Audiowide, cursive;color: #000000;">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })

                </div>
                <div class="form-group"><button class="btn btn-primary btn-block" type="submit" style="font-family: Audiowide, cursive;background-color: rgb(61,61,61);">Login</button></div><a class="forgot" href="#" style="font-family: Audiowide, cursive;color: #000000;">Forgot your email or password?</a>
            </form> 

        </div>
    }
</body>


